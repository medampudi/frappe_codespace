{
  "name": "Frappe Bench with GitHub Integration",
  "forwardPorts": [8000, 9000, 6787],
  "remoteUser": "frappe",
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash",
    "debug.node.autoAttach": "disabled",
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "git.confirmSync": false
  },
  "dockerComposeFile": "./docker-compose.yml",
  "service": "frappe",
  "workspaceFolder": "/workspace/frappe-bench",
  "postCreateCommand": "bash /workspace/scripts/init.sh",
  "shutdownAction": "stopCompose",
  "extensions": [
    "ms-python.python",
    "ms-vscode.live-server",
    "grapecity.gc-excelviewer",
    "mtxr.sqltools",
    "visualstudioexptteam.vscodeintellicode",
    "github.vscode-pull-request-github",
    "github.github-vscode-theme",
    "ms-vscode.vscode-json"
  ],
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {
      "installDirectlyFromGitHubRelease": true,
      "version": "latest"
    }
  },
  "customizations": {
    "codespaces": {
      "repositories": {
        "permissions": {
          "repository": "write",
          "metadata": "read",
          "contents": "write",
          "pull_requests": "write"
        }
      }
    }
  },
  "containerEnv": {
    "APP_NAME": "${localEnv:APP_NAME:my_frappe_app}",
    "CREATE_GITHUB_REPO": "${localEnv:CREATE_GITHUB_REPO:true}",
    "AUTO_INSTALL_APP": "${localEnv:AUTO_INSTALL_APP:true}"
  }
}
